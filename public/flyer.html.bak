    border: 1.5px solid rgba(245,158,11,0.5);
    color: #fbbf24;
    font-size: 11px;
    font-weight: 700;
    padding: 5px 12px;
    border-radius: 20px;
    letter-spacing: 0.5px;
  }

  /* HERO TEXT */
  .hero { padding: 36px 40px 28px; }
  .hero h2 { font-size: 38px; font-weight: 900; line-height: 1.15; margin-bottom: 16px; }
  .hero h2 em { color: #2dd4bf; font-style: normal; }
  .hero p { font-size: 17px; color: #cbd5e1; line-height: 1.6; max-width: 480px; }

  /* SERVICIOS */
  .servicios { padding: 0 40px 28px; }
  .servicios h3 { font-size: 13px; font-weight: 700; color: #64748b; text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 14px; }
  .chips { display: flex; flex-wrap: wrap; gap: 10px; }
  .chip {
    background: rgba(45,212,191,0.08);
    border: 1.5px solid rgba(45,212,191,0.2);
    border-radius: 50px;
    padding: 8px 16px;
    font-size: 15px;
    font-weight: 700;
    color: #e2e8f0;
    display: flex; align-items: center; gap: 7px;
  }
  .chip span:first-child { font-size: 18px; }

  /* PARA TRABAJADORES */
  .workers {
    margin: 0 40px 28px;
    background: rgba(45,212,191,0.06);
    border: 1.5px solid rgba(45,212,191,0.2);
    border-radius: 16px;
    padding: 22px 24px;
  }
  .workers h3 { font-size: 17px; font-weight: 900; color: #2dd4bf; margin-bottom: 12px; }
  .workers ul { list-style: none; display: flex; flex-direction: column; gap: 8px; }
