    display: flex;
    align-items: center;
    gap: 28px;
    background: white;
    border-radius: 20px;
    padding: 24px 28px;
  }
  .qr-box canvas, .qr-box { flex-shrink: 0; }
  .qr-text { flex: 1; }
  .qr-text h3 { font-size: 22px; font-weight: 900; color: #0f172a; line-height: 1.2; margin-bottom: 8px; }
  .qr-text p { font-size: 14px; color: #475569; line-height: 1.5; margin-bottom: 12px; }
  .qr-text .url { font-size: 12px; color: #14b8a6; font-weight: 700; word-break: break-all; }
  .arrow { font-size: 28px; }

  /* FOOTER */
  .footer {
    margin-top: auto;
    padding: 20px 40px;
    border-top: 1px solid rgba(255,255,255,0.08);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .footer p { font-size: 12px; color: #475569; }
  .footer .zona { font-size: 12px; color: #2dd4bf; font-weight: 700; }

  /* Print */
  @media print {
    body { background: white; padding: 0; }
    .flyer { border-radius: 0; width: 210mm; min-height: 297mm; }
    .no-print { display: none; }
  }

  /* Bot√≥n imprimir */
